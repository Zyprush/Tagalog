<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <EditText
        android:id="@+id/id_number_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:hint="ID Number"/>
    <EditText
        android:id="@+id/name_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Full Name"
        android:textColor="@color/black"
        android:layout_below="@+id/id_number_add"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/course_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Course"
        android:textColor="@color/black"
        android:layout_below="@+id/name_add"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/ys_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_add"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/dash"
        android:textColor="@color/black"
        android:hint="Year" />

    <TextView
        android:id="@+id/dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/course_add"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/sec_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/course_add"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/dash"
        android:hint="Section"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/confirm_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ys_add"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#808080"
        android:text="Save"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/cancel_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ys_add"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#808080"
        android:textColor="@color/black"
        android:text="Cancel" />


</RelativeLayout>